<div class="tab-panel"
    {% if options["min-height"] is defined %}
        style="min-height: {{options["min-height"]}}"
    {% endif %}
    {% if options.id is defined and options.id %}
        id="{{ options.id }}"
    {% endif %}
    >
    <div class="tab-panel-strip">
        {% for key,tab in tabs %}
            <div onclick="EducAction.Ades.TabPanel.select(this,'{{key}}')"
                {% if tab.selected is defined and tab.selected %}
                    class="tab-panel-selected"
                {% endif %}
                {% if tab.tooltip is defined and tab.tooltip %}
                    {{ overlib(tab.tooltip) }}
                {% endif %}
            >
                {{ tab.text }}
            </div>
        {% endfor %}
    </div>
    <div class="tab-panel-panels">
