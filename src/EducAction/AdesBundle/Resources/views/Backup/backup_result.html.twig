{% if backup %}
    {% if backup.failed %}
		<fieldset class="notice auto_close_on_click">
			<legend>Erreur lors de la sauvegarde</legend>
            {% if backup.dump_launched %}
                <p class="impt">La sauvegarde a échoué!</p>
				<p>Le système a renvoyé l'erreur:</p>
                <p>{{ backup.error }}</p>
            {% else %}
				<p class="impt">L'utilitaire de sauvegarde n'a pas pu être exécuté.</p>
            {% endif %}
		</fieldset>
    {% else %}
        <p class="success auto_close">Une nouvelle sauvegarde a été effectuée dans le fichier {{ backup.filename }}</p>
    {% endif %}
{% endif %}
