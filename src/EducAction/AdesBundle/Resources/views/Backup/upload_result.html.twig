{% if upload %}
    {% if upload.success %}
        <p class="success auto_close">Le fichier a été importé sous {{ upload.filename }}.</p>
    {% else %}
		<fieldset class="notice auto_close_on_click">
			<legend>Erreur lors de l'importation</legend>
            <p class="impt">
                {% if not upload.upload_found %}
                    Aucun fichier n'a été sélectionné.
                {% elseif not upload.uploaded %}
                    Une erreur s'est produite pendant l'envoi du fichier (code: {{upload.error}}).
                {% elseif not upload.signature_found %}
                    Le fichier envoyé ne contient pas de signature électronique.
                {% elseif not upload.signature_valid %}
                    Le fichier envoyé contient une signature invalide.
                {% elseif not upload.info_found %}
                    Le fichier envoyé ne contient pas de méta-données.
                {% else %}
                    Une erreur inconnue s'est produite.
                {% endif %}
            </p>
		</fieldset>
    {% endif %}
{% endif %}
