{% extends 'EducActionAdesBundle:Install:layout.html.twig' %}

{% block content %}
<form name="form" method="post" action="{{ path("educ_action_ades_install_db_submit") }}">
	<p>
		<label>Serveur Sql :</label>
		<input value="{{ host }}" name="sqlserver" id="sqlserver" size="30" maxlength="50" type="text">
	</p>
	<p>
		<label>Utilisateur :</label>
		<input value="{{ username }}" name="utilisateursql" id="utilisateur" size="30" maxlength="50" type="text">
	</p>
	<p>
		<label>Mot de Passe :</label>
		<input value="{{ pwd }}" name="motdepassesql" id="motdepasse" size="30" maxlength="50" type="password">
	</p>
	<p>
		<label>Nom de la Base de données :</label>
		<input value="{{ dbname }}" name="nomdelabasesql" id="nomdelabase" size="30" maxlength="50" type="text">
	</p>

	<input name="Submit" value="Enregistrer" type="submit">

	{% if missing_fields is defined %}
		<p>Veuillez remplir complètement le formulaire</p>
	{% endif %}

	{% if error is defined %}
            <p>Le connexion à la base de données a échoué.</p>
	    <p>Le système a renvoyé l'erreur: {{ error }}</p>
	{% endif %}
</form>

{% endblock %}
