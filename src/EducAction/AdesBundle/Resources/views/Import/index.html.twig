{% extends 'EducActionAdesBundle::layout.html.twig' %}

{% block content %}

<h2>Importation de données à partir d'un fichier CSV de ProEco</h2>

{% if missing_file %}
		<fieldset class="notice auto_close_on_click">
            <legend>Erreur</legend>
            <p class="impt">Veuillez sélectionner un fichier.</p>
		</fieldset>
{% elseif upload_error %}
		<fieldset class="notice auto_close_on_click">
            <legend>Erreur</legend>
            <p class="impt">Une erreur s'est produite lors de l'envoi du fichier vers le serveur:</p>
            <p>{{ upload_error }}</p>
		</fieldset>
{% endif %}
<form method="POST" enctype="multipart/form-data">
    <input name="csv" type="file">
    <input value="Envoyer" type="submit">
</form>

{% endblock %}
